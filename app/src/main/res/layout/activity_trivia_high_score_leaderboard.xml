<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TriviaHighScoreLeaderboard">

    <TextView
        android:id="@+id/textHighScoreLeaderBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

<!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--        android:id="@+id/refresher"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="670dp">-->

    <ListView
        android:id="@+id/listHighScore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textHighScoreLeaderBoard"
        android:layout_above="@+id/btnContinuePlay"/>
<!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="One more game"
        android:id="@+id/btnContinuePlay"
        android:layout_alignParentBottom="true" />
    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Exit"
        android:id="@+id/btnExit"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>