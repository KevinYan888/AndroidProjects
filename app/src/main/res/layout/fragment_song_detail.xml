<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongDetailFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/fragmentLocation"
        android:layout_width="match_parent"
        android:layout_height="842dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/row_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:textSize="50sp"
            android:text="Song detail: " />


        <TextView
            android:layout_below="@+id/row_head"
            android:id="@+id/row_songId_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:hint="SongID "
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
             />

        <TextView
            android:id="@+id/row_songTitle_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_songId_f"
            android:textSize="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
           />

        <TextView
            android:id="@+id/row_artistName_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_songTitle_f"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/row_artistId_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_artistName_f"
            android:layout_marginLeft="20dp"
            android:textSize="50dp"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/tofaverateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/save_to_favourite" />


    </RelativeLayout>
</FrameLayout>
