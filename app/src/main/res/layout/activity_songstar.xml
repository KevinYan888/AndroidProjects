<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SongActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".SongMenuActivity">


    <androidx.appcompat.widget.ActionMenuView
        android:layout_width="300dp"
        android:layout_height=30dp"
        >
    <item android:id="@+id/item1"
        android:title="@string/Name"
        android:icon="@drawable/freeicon"
        android:orderInCategory="100"
        app:showAsAction="always"/>  <!-- This uses showAsAction=always, so look at icon= parameter -->


    <item android:id="@+id/search_item"
        android:orderInCategory="50"
        app:actionViewClass="android.widget.SearchView"
        android:icon="@android:drawable/ic_search_category_default"
        app:showAsAction="always|collapseActionView"
        android:title="@string/search"/>    <!-- This uses showAsAction=always, so look at icon= parameter -->


    <item android:id="@+id/help_item"
        android:icon="@drawable/global"
        android:title="Look at globe"
        app:showAsAction="never"
        android:orderInCategory="400"/> <!-- This uses showAsAction=never, so look at title= parameter -->

    <item android:id="@+id/mail"
        android:icon="@drawable/mail"
        android:orderInCategory="75"
        app:showAsAction="always"
        android:title="Not used, since showAsAction=always"/>

    </androidx.appcompat.widget.ActionMenuView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".listvity">
        <Button
            android:id="@+id/btnSongSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song List" />

        <ProgressBar
        android:id="@+id/progressBarSong"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ListView
        android:id="@+id/listViewSong"
        android:layout_width="400dp"
        android:layout_height="400dp"  />
    </LinearLayout>



</LinearLayout>