<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SongActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".listvity">

        <ImageView
            android:id="@+id/imageViewSong"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/headv2"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".listing">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="type the song title or artist name "
                android:inputType="textPersonName"
                android:keyboardNavigationCluster="false"
                 />

            <ImageButton
                android:id="@+id/song_searchButton"
                android:layout_alignParentRight="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/songsearch" />

        </RelativeLayout>

        <ProgressBar
        android:id="@+id/progressBarSong"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:scaleY="6"
        android:layout_height="20dp" />

        <ListView
            android:id="@+id/listViewSong"
            android:layout_width="match_parent"
            android:layout_height="648dp"
            />

    </LinearLayout>



</LinearLayout>