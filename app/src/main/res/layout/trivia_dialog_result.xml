<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/textEditPlayerName"
        android:hint="Your name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="34dp" />
    <TextView
        android:id="@+id/textCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textCorrect"
        android:layout_below="@+id/textEditPlayerName"

        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/textIncorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCorrect"
        android:text="textIncorrect"

        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="73dp" />
</RelativeLayout>